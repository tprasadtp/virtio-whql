root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.key]
insert_final_newline = false

# Makefiles and Make Templates
[{Makefile,GNUMakefile,*.mk}]
indent_style = tab
indent_size = 4

[{*.yml,*.yaml}]
indent_size = 2

[*.json]
indent_size = 2

[Dockerfile]
indent_size = 4

[*.ps1]
end_of_line = crlf
indent_size = 4

[*.cmd]
end_of_line = crlf
indent_size = 4
